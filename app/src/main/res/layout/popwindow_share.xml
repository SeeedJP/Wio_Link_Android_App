<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A6000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="293dp"
        android:layout_alignParentBottom="true"
        android:background="#e5FFFFFF"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="27dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mLlCopy"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_copy" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/copy"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlSafari"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_safari" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/browser"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlMail"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_email" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/mail"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mLlMessage"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_message" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/message"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="17dp"
            android:background="#FFC7C7C7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="17dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/mLlTwitter"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_twitter" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Twitter"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlGoogle"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_google" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Google+"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mLlWhatsapp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_wtsapp" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Whatsapp"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/mLlFacebook"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_share">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/share_facebook" />

                </RelativeLayout>

                <cc.seeed.iot.view.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Facebook"
                    android:textColor="#FF3A4B71"
                    android:textSize="12sp"
                    app:cusTextFont="@string/Proxima_Nova_Regular" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <cc.seeed.iot.view.FontTextView
        android:id="@+id/mTvCancel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="#FF3A4B71"
        android:textSize="14sp"
        app:cusTextFont="@string/Proxima_Nova_Semibold" />
</RelativeLayout>
